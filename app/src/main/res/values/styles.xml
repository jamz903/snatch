<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueColor</item>
        <item name="colorPrimaryDark">@color/blueColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.StallOwnerTheme">
        <item name="colorPrimary">@color/yellowColor</item>
        <item name="colorPrimaryDark">@color/yellowColorDark</item>
    </style>

    <style name="AppTheme.FormTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/lightGreyColor</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>
